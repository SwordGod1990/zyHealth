<?xml version="1.0" encoding="utf-8"?><!--底部清单-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_bottomOrder_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:layout_alignParentBottom="true"
    android:background="@color/color_white">


    <RelativeLayout
        android:id="@+id/view_bottom_rl"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_48">

        <ImageView
            android:id="@+id/view_bottom_msg_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bill" />

        <TextView
            android:id="@+id/view_bottom_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_bottom_msg_img"
            android:layout_centerHorizontal="true"
            android:text="@string/orderList"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/view_bottom_msgNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_m_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/view_bottom_msg_img"
            android:background="@drawable/red_bubble_bg"
            android:gravity="center"
            android:text="11"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>

    <TextView
        android:id="@+id/view_bottom_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_70"
        android:background="@color/color_E5E5E5" />

    <TextView
        android:id="@+id/view_bottom_content01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_toEndOf="@+id/view_bottom_line"
        android:text="@string/common"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/view_bottom_goodsNum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_bottom_content01"
        android:text="@string/num_15"
        android:textColor="@color/color_EB3E2D"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/view_bottom_content02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_bottom_goodsNum_tv"
        android:text="@string/drugs"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/view_bottom_lookBill_tv"
        android:layout_width="@dimen/dp_113"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_btn"
        android:gravity="center"
        android:text="@string/lookOrder"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_18" />
</RelativeLayout>
