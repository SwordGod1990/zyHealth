<?xml version="1.0" encoding="utf-8"?><!--地址定位-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_address_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/view_address_icon_iv"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/address" />

    <TextView
        android:id="@+id/view_address_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_address_icon_iv"
        android:text="辽宁省 大连市 庄河市" />

    <ImageView
        android:id="@+id/view_address_go_iv"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/right" />
</RelativeLayout>
