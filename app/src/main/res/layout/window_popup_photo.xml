<?xml version="1.0" encoding="utf-8"?><!--头像弹窗-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent">

    <LinearLayout
        android:id="@+id/id_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/window_circlePhoto_beatPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/white_bg_dialog"
            android:gravity="center"
            android:text="@string/patPhoto"
            android:textColor="@color/color_333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_999" />

        <Button
            android:id="@+id/window_circlePhoto_selectPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_ccc"
            android:gravity="center"
            android:text="@string/choosePhoto"
            android:textColor="@color/color_333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_999" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/color_999" />

        <Button
            android:id="@+id/window_circlePhoto_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/color_ccc"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_999" />
    </LinearLayout>
</RelativeLayout>
