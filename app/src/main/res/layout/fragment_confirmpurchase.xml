<?xml version="1.0" encoding="utf-8"?><!--确认采购-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFF4">

    <com.zyjk.posmall.view.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mTitleBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_addressMsg_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_confirmPurchase_rl"
                android:background="@color/color_white"
                android:paddingBottom="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                tools:ignore="UnknownIdInLayout">

                <ImageView
                    android:id="@+id/frg_confirmPurchase_addressIcon_iv"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_18"
                    android:src="@drawable/address" />

                <RelativeLayout
                    android:id="@+id/frg_confirmPurchase_msg_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_addressIcon_iv">

                    <TextView
                        android:id="@+id/frg_confirmPurchase_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="驴得水"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/frg_confirmPurchase_phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/frg_confirmPurchase_name_tv"
                        android:text="15647448007"
                        android:textColor="@color/color_4A90E2"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/frg_confirmPurchase_modifyAddress_iv"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/modify" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/frg_confirmPurchase_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frg_confirmPurchase_msg_rl"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_addressIcon_iv"
                    android:text="@string/goodsAddress"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_addressContent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frg_confirmPurchase_msg_rl"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_address_tv"
                    android:text="北京丰台区首经贸万年花城3期6号楼"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/frg_confirmPurchase_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/frg_confirmPurchase_addressMsg_rl"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/color_E5E5E5" />

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_stayMessage_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frg_confirmPurchase_line"
                android:background="@color/color_white"
                android:paddingBottom="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <ImageView
                    android:id="@+id/frg_confirmPurchase_msgIcon_iv"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/stay_message" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_stayMessage_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_msgIcon_iv"
                    android:text="@string/message"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_stayMessage_name_tv"
                    android:background="@null"
                    android:hint="@string/hint_message"
                    android:textColor="@color/color_B3B3B3"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_payWay_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_below="@+id/frg_confirmPurchase_stayMessage_rl"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/frg_confirmPurchase_payWay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/payWay_a"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/frg_confirmPurchase_payWay_iv"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:src="@drawable/right" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_wxPay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_toStartOf="@+id/frg_confirmPurchase_payWay_iv"
                    android:text="微信支付"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_companyMsg_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"
                android:layout_below="@+id/frg_confirmPurchase_payWay_rl"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16">


                <RelativeLayout
                    android:id="@+id/frg_confirmPurchase_company_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/frg_confirmPurchase_companyIcon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@drawable/drug" />

                    <TextView
                        android:id="@+id/frg_confirmPurchase_companyName_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/frg_confirmPurchase_companyIcon_iv"
                        android:text="朗致药业有限公朗致药业有限公司"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_15" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/frg_confirmPurchase_userName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frg_confirmPurchase_company_rl"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="黎明"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_userPhone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frg_confirmPurchase_company_rl"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_userName_tv"
                    android:text="13843567890"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/frg_confirmPurchase_xrv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frg_confirmPurchase_companyMsg_rl"
                android:background="@color/color_F9F9F9"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16" />

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_freight_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/frg_confirmPurchase_xrv"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/frg_confirmPurchase_freightName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/freight"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_freightUnit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="@string/unit"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/frg_confirmPurchase_freightPrice_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_toStartOf="@+id/frg_confirmPurchase_freightUnit_tv"
                    android:background="@color/color_white"
                    android:gravity="right"
                    android:hint="@string/hint_freight"
                    android:textColor="@color/color_B3B3B3"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_order_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:layout_below="@+id/frg_confirmPurchase_freight_rl"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="提交订单"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_orderPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="3000.00"
                    android:textColor="@color/color_EB3E2D"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_orderSign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/frg_confirmPurchase_orderPrice_tv"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/frg_confirmPurchase_orderPrice_tv"
                    android:text="@string/moneySign"
                    android:textColor="@color/color_EB3E2D"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frg_confirmPurchase_money_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:layout_below="@+id/frg_confirmPurchase_order_rl"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/frg_confirmPurchase_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/frg_confirmPurchase_moneySign_tv"
                    android:layout_centerVertical="true"
                    android:text="@string/payableMoney"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_moneySign_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/frg_confirmPurchase_moneyPrice_tv"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_money_tv"
                    android:text="@string/moneySign"
                    android:textColor="@color/color_EB3E2D"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_moneyPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/frg_confirmPurchase_moneySign_tv"
                    android:text="2000.00"
                    android:textColor="@color/color_EB3E2D"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/frg_confirmPurchase_tv"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rectangle_btn"
                    android:gravity="center"
                    android:text="@string/confirmPurchase"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
