<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_tab_order_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/color_white"
    android:focusable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:paddingTop="@dimen/dp_13">

        <ImageView
            android:id="@+id/item_tabOrder_icon_iv"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/drug" />

        <TextView
            android:id="@+id/item_tabOrder_company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/item_tabOrder_icon_iv"
            android:text="大连益邦药业有限公司"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/item_tabOrder_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/pendingReceipt"
            android:textColor="@color/color_FF7715" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_E5E5E5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_tabOrder_drug_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/color_FAFAFA"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/item_tabOrder_species_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="共5种"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_tabOrder_pay_tv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/red_btn_confirm"
            android:gravity="center"
            android:text="@string/ConfirmGoods"
            android:textColor="@color/color_white" />
    </RelativeLayout>
</LinearLayout>
