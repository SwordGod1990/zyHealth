<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_tab_order_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size20"
    android:background="@color/color_white"
    android:focusable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size26"
        android:paddingLeft="@dimen/size30"
        android:paddingRight="@dimen/size30"
        android:paddingTop="@dimen/size26">

        <ImageView
            android:id="@+id/item_tabOrder_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/drug" />

        <TextView
            android:id="@+id/item_tabOrder_company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size11"
            android:layout_toRightOf="@+id/item_tabOrder_icon_iv"
            android:text="大连益邦药业有限公司"
            android:textColor="@color/color_333"
            android:textSize="@dimen/txt16" />

        <TextView
            android:id="@+id/item_tabOrder_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待收货"
            android:textColor="@color/color_FF7715" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size1"
        android:layout_marginBottom="@dimen/size15"
        android:layout_marginLeft="@dimen/size30"
        android:background="@color/color_E5E5E5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size30"
        android:paddingRight="@dimen/size30">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_tabOrder_drug_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size15"
        android:background="@color/color_FAFAFA"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size30"
        android:paddingRight="@dimen/size30">

        <TextView
            android:id="@+id/item_tabOrder_species_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="共5种"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/txt15" />

        <TextView
            android:id="@+id/item_tabOrder_pay_tv"
            android:layout_width="@dimen/size160"
            android:layout_height="@dimen/size56"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/size16"
            android:layout_marginTop="@dimen/size16"
            android:background="@drawable/red_btn_confirm"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/color_white" />
    </RelativeLayout>
</LinearLayout>
