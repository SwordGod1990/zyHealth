<?xml version="1.0" encoding="utf-8"?><!--药品信息-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFF4"
    android:orientation="vertical">

    <com.zyjk.posmall.view.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="" />

    <RelativeLayout
        android:id="@+id/item_drugMessage_drugName_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_drugMessage_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/drugName"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_drugMessage_star01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_drugMessage_name_tv"
            android:text="@string/star"
            android:textColor="@color/color_EB3E2D" />

        <TextView
            android:id="@+id/item_drugMessage_drugName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="板蓝根颗粒"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginStart="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/drugDetails"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/item_drugMessage_drugSpec_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_drugMessage_spec_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:text="@string/norms_b"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/item_drugMessage_drugSpec_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@null"
            android:hint="@string/hint_spec"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_drugMessage_drugPackage_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_drugMessage_package_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:text="@string/wrappings_b"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/item_drugMessage_drugPackage_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@null"
            android:hint="@string/hint_num"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_drugMessage_drugFactory_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_drugMessage_factory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:text="@string/factory_b"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_drugMessage_star02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_drugMessage_factory_tv"
            android:text="@string/star"
            android:textColor="@color/color_EB3E2D" />

        <EditText
            android:id="@+id/item_drugMessage_drugFactory_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@null"
            android:hint="@string/hint_factory"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_drugMessage_num_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/item_drugMessage_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:text="@string/priorNum"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_drugMessage_drudNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/item_drugMessage_add_iv"
            android:text="10"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/item_drugMessage_jian_iv"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/item_drugMessage_drudNum_tv"
            android:background="@drawable/white_bg_jian"
            android:padding="@dimen/dp_7"
            android:src="@drawable/jian" />

        <ImageView
            android:id="@+id/item_drugMessage_add_iv"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/red_bg_num"
            android:padding="@dimen/dp_7"
            android:src="@drawable/add" />
    </RelativeLayout>
</LinearLayout>
