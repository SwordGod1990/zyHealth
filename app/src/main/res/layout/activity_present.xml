<?xml version="1.0" encoding="utf-8"?><!--满增列表-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFF4">

    <com.zyjk.posmall.view.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="满赠优惠" />

    <FrameLayout
        android:id="@+id/presentList_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mTitleBar">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/presentList_xrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <com.zyjk.posmall.page.LoadPage
            android:id="@+id/mLoadPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/presentList_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <include layout="@layout/view_bottom" />

    </RelativeLayout>
</RelativeLayout>
