<?xml version="1.0" encoding="utf-8"?><!--版本更新-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/white_dialog_update"
        android:gravity="center">

        <ImageView
            android:id="@+id/dialog_editionUpdate_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dog" />

        <TextView
            android:id="@+id/dialog_editionUpdate_content01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_editionUpdate_iv"
            android:text="1.优化"
            android:textSize="@dimen/txt11" />

        <TextView
            android:id="@+id/dialog_editionUpdate_content02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_editionUpdate_content01_tv"
            android:text="2.修复bug"
            android:textSize="@dimen/txt11" />

        <TextView
            android:id="@+id/dialog_editionUpdate_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_editionUpdate_content02_tv"
            android:text="版本：1.0.0"
            android:textSize="@dimen/txt11" />
    </RelativeLayout>

</LinearLayout>
