<?xml version="1.0" encoding="utf-8"?><!--退款通知-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zyjk.posmall.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="退款通知" />

    <TextView
        android:id="@+id/refundNotice_moneyName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_41"
        android:gravity="center_horizontal"
        android:text="@string/refundAmount"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:id="@+id/refundNotice_money_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/refundNotice_moneyUnit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/refundNotice_moneyNum_tv"
            android:text="@string/moneySign"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/sp_28" />

        <TextView
            android:id="@+id/refundNotice_moneyNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/refundNotice_moneyUnit_tv"
            android:text="2000.00"
            android:textColor="@color/color_151515"
            android:textSize="@dimen/sp_40" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center_horizontal"
        android:text="@string/refundNotice"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:id="@+id/refundNotice_way_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:id="@+id/refundNotice_wayName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refundNotice_way"
            android:textColor="@color/color_3F3F3F"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/refundNotice_wayContent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/refundNotice_wayName_tv"
            android:text="@string/refundNoticeWay"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/refundNotice_date_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11">

        <TextView
            android:id="@+id/refundNotice_dateName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refundNotice_time"
            android:textColor="@color/color_3F3F3F"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/refundNotice_dateContent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/refundNotice_dateName_tv"
            android:text="@string/refundNotice_time01"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/refundNotice_dateContent02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/refundNotice_dateContent_tv"
            android:layout_below="@+id/refundNotice_dateContent_tv"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/refundNotice_time24"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@drawable/button" />
</LinearLayout>
