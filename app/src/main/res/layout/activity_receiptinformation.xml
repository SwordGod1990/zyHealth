<?xml version="1.0" encoding="utf-8"?><!--填写收货信息-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFF4"
    android:orientation="vertical">

    <com.zyjk.posmall.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="填写收货信息" />

    <RelativeLayout
        android:id="@+id/receiptInformation_people_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/receiptInformation_peopleName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consignee"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/receiptInformation_people_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/userName"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_E6E6E6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/receiptInformation_phoneName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactNumber"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/receiptInformation_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/userPhone"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_E6E6E6" />

    <RelativeLayout
        android:id="@+id/receiptInformation_area_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/receiptInformation_areaName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/region"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/receiptInformation_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/receiptInformation_area_iv"
            android:text="@string/userAddress"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/receiptInformation_area_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_11"
            android:src="@drawable/right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@color/color_E6E6E6" />

    <RelativeLayout
        android:id="@+id/receiptInformation_address_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/receiptInformation_addressName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completeAddress"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/receiptInformation_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/userArea"
            android:textColor="@color/color_4D4D4D"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/receiptInformation_save_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_51"
        android:background="@drawable/red_btn_save"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_18" />
</LinearLayout>
