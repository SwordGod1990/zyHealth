<?xml version="1.0" encoding="utf-8"?><!--商品详情-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFEFF4">

    <com.zyjk.posmall.view.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mTitleBar">

        <ScrollView
            android:id="@+id/details_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/details_one_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white">

                    <LinearLayout
                        android:id="@+id/details_show_ll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size380"
                        android:background="@color/color_white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/details_show_iv"
                            android:layout_width="@dimen/size350"
                            android:layout_height="@dimen/size206"
                            android:background="@drawable/rectangle" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/details_time_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_show_ll">

                        <RelativeLayout
                            android:layout_width="@dimen/size466"
                            android:layout_height="@dimen/size92"
                            android:background="@drawable/rectangle_btn"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/goods_details_moneySign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/goods_details_money"
                                android:layout_marginLeft="16dp"
                                android:text="@string/details_money_sign"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/txt15" />

                            <TextView
                                android:id="@+id/goods_details_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/goods_details_moneySign"
                                android:text="33.33"
                                android:textColor="@color/color_white"
                                android:textSize="26dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size92"
                            android:background="@color/color_FFEDEB"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size14"
                                android:text="@string/details_activity_time"
                                android:textColor="@color/color_EB3E2D"
                                android:textSize="@dimen/txt10" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/goods_details_H"
                                    android:layout_width="@dimen/size36"
                                    android:layout_height="@dimen/size36"
                                    android:background="@drawable/red_bg_time"
                                    android:gravity="center"
                                    android:text="23"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/txt12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:text=":"
                                    android:textColor="@color/color_EB3E2D" />

                                <TextView
                                    android:id="@+id/goods_details_M"
                                    android:layout_width="@dimen/size36"
                                    android:layout_height="@dimen/size36"
                                    android:background="@drawable/red_bg_time"
                                    android:gravity="center"
                                    android:text="12"
                                    android:textColor="@color/color_white"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:text=":"
                                    android:textColor="@color/color_EB3E2D" />

                                <TextView
                                    android:id="@+id/goods_details_S"
                                    android:layout_width="@dimen/size36"
                                    android:layout_height="@dimen/size36"
                                    android:background="@drawable/red_bg_time"
                                    android:gravity="center"
                                    android:text="59"
                                    android:textColor="@color/color_white"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/goods_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_time_ll"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="慢严舒柠好爽糖慢严舒柠好爽糖慢严舒柠好爽"
                        android:textColor="@color/color_333" />

                    <TextView
                        android:id="@+id/goods_details_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_details_name"
                        android:layout_marginLeft="16dp"
                        android:text="@string/details_freight"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/goods_details_freight_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_details_name"
                        android:layout_toRightOf="@+id/goods_details_freight"
                        android:text="50"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/line_one"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/goods_details_freight_money"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_E5E5E5" />

                    <RelativeLayout
                        android:id="@+id/goods_details_gift_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_one"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/goods_details_gift_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/details_activity_name"
                            android:textColor="@color/color_999"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/goods_details_gift_sign"
                            android:layout_width="36dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/goods_details_gift_name"
                            android:background="@drawable/white_bg_sign"
                            android:gravity="center"
                            android:text="@string/details_prent"
                            android:textColor="@color/color_EB3E2D"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/goods_details_gift_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/goods_details_gift_sign"
                            android:paddingLeft="@dimen/size10"
                            android:text="赠品」阿莫西林胶囊"
                            android:textSize="@dimen/txt14" />

                        <ImageView
                            android:id="@+id/goods_details_gift_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/right" />

                        <TextView
                            android:id="@+id/goods_details_gift_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/goods_details_gift_icon"
                            android:text="1"
                            android:textSize="@dimen/txt14" />

                        <TextView
                            android:id="@+id/goods_details_gift_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/goods_details_gift_num"
                            android:text="x"
                            android:textSize="@dimen/txt14" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/goods_details_full_content_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/goods_details_condition_rl"
                        android:layout_below="@+id/goods_details_gift_rl"
                        android:paddingLeft="@dimen/size72">

                        <TextView
                            android:id="@+id/goods_details_full_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size16"
                            android:layout_marginTop="@dimen/size10"
                            android:paddingLeft="@dimen/size10"
                            android:text="满20盒赠送"
                            android:textSize="@dimen/txt14" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/goods_details_condition_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_details_full_content_rl"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_marginLeft="51dp">

                        <TextView
                            android:id="@+id/goods_details_condition"
                            android:layout_width="36dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/white_bg_sign"
                            android:gravity="center"
                            android:text="@string/details_condition"
                            android:textColor="@color/color_EB3E2D"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/goods_details_condition_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/goods_details_condition"
                            android:paddingLeft="@dimen/size10"
                            android:text="最低购买3盒"
                            android:textSize="@dimen/txt14" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/goods_details_instructions_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/goods_details_condition_rl"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="51dp">

                        <TextView
                            android:id="@+id/goods_details_instructions"
                            android:layout_width="36dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/white_bg_sign"
                            android:gravity="center"
                            android:text="@string/details_instructions"
                            android:textColor="@color/color_EB3E2D"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/goods_details_instructions_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/goods_details_instructions"
                            android:paddingLeft="@dimen/size10"
                            android:text="(满300件免运费)"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/txt14" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/line_two"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/goods_details_instructions_rl"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/color_E5E5E5" />

                    <TextView
                        android:id="@+id/details_specifications_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_two"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_marginLeft="@dimen/size30"
                        android:layout_marginTop="@dimen/size15"
                        android:text="规格："
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_specifications_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_two"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_marginTop="@dimen/size15"
                        android:layout_toRightOf="@+id/details_specifications_name_tv"
                        android:text="不详"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_package_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_specifications_name_tv"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_marginLeft="@dimen/size30"
                        android:text="包装："
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_package_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_specifications_name_tv"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_toRightOf="@+id/details_package_name_tv"
                        android:text="10粒／盒"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_factory_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_package_name_tv"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_marginLeft="@dimen/size30"
                        android:text="厂家："
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_factory_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_package_name_tv"
                        android:layout_marginBottom="@dimen/size16"
                        android:layout_toRightOf="@+id/details_factory_name_tv"
                        android:text="大连药业有限公司"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_date_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_factory_content_tv"
                        android:layout_marginLeft="@dimen/size30"
                        android:text="效期："
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_date_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/details_factory_content_tv"
                        android:layout_marginBottom="@dimen/size30"
                        android:layout_toRightOf="@+id/details_date_name_tv"
                        android:text="2年"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/txt14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/details_two_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size90"
                    android:layout_below="@+id/details_one_rl"
                    android:layout_marginBottom="@dimen/size20"
                    android:layout_marginTop="@dimen/size30"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/size30">

                    <TextView
                        android:id="@+id/details_business_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="商家："
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/txt14" />

                    <TextView
                        android:id="@+id/details_business_content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/details_business_name_tv"
                        android:text="大连药业有限公司"
                        android:textColor="@color/color_2A2A2A"
                        android:textSize="@dimen/txt14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_two_rl">

                    <include layout="@layout/view_bottom" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


        <com.zyjk.posmall.page.LoadPage
            android:id="@+id/mLoadPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
