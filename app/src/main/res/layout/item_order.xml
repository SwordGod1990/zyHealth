<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <RelativeLayout
        android:id="@+id/item_order_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:paddingTop="@dimen/dp_13">

        <ImageView
            android:id="@+id/item_order_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/drug" />

        <TextView
            android:id="@+id/item_order_company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/item_order_icon_iv"
            android:text="大连益邦药业有限公司"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_order_payState_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/stayPay"
            android:textColor="@color/color_FF7715"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/item_order_xrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/item_order_class_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FAFAFA"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:id="@+id/item_order_classNum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共 3 种"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:background="@drawable/red_btn_refund"
            android:gravity="center"
            android:text="@string/pay"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>
