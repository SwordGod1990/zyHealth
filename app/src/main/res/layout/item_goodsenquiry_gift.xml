<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_EFEFF4">

    <RelativeLayout
        android:id="@+id/item_goodsEnquiryGift_rl"
        android:layout_width="@dimen/size348"
        android:layout_height="@dimen/size356"
        android:background="@drawable/public_discount_white_xrv"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_goodsEnquiryGift_iv"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/item_goodsEnquiryGift_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryGift_iv"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginTop="@dimen/size20"
            android:text="阿莫西林胶囊阿莫西..."
            android:textColor="@color/color_333"
            android:textSize="@dimen/txt15" />

        <RelativeLayout
            android:id="@+id/item_goodsEnquiryGift_gift_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryGift_name_tv"
            android:layout_marginLeft="@dimen/size22"
            android:layout_marginTop="@dimen/size16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_goodsEnquiryGift_giftSign_tv"
                android:layout_width="@dimen/size72"
                android:layout_height="@dimen/size30"
                android:layout_centerVertical="true"
                android:background="@drawable/public_discount_white"
                android:gravity="center"
                android:text="@string/item_home_gift"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt10" />

            <TextView
                android:id="@+id/item_goodsEnquiryGift_giftName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size20"
                android:layout_toRightOf="@+id/item_goodsEnquiryGift_giftSign_tv"
                android:text="阿莫西林胶囊"
                android:textColor="@color/color_999"
                android:textSize="@dimen/txt13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_goodsEnquiryGift_num_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_goodsEnquiryGift_gift_rl"
            android:layout_below="@+id/item_goodsEnquiryGift_gift_rl"
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_goodsEnquiryGift_numSign_tv"
                android:layout_width="@dimen/size72"
                android:layout_height="@dimen/size30"
                android:layout_centerVertical="true"
                android:background="@drawable/public_discount_white"
                android:gravity="center"
                android:text="@string/item_home_giftNum"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt10" />

            <TextView
                android:id="@+id/item_goodsEnquiryGift_numName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size20"
                android:layout_toRightOf="@+id/item_goodsEnquiryGift_numSign_tv"
                android:text="最低购买3盒"
                android:textColor="@color/color_999"
                android:textSize="@dimen/txt13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryGift_num_rl"
            android:layout_marginTop="@dimen/size16">

            <TextView
                android:id="@+id/item_goodsEnquiryGift_moneySign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiryGift_money_tv"
                android:layout_marginLeft="@dimen/size20"
                android:text="@string/money_unit"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt13" />

            <TextView
                android:id="@+id/item_goodsEnquiryGift_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_goodsEnquiryGift_moneySign_tv"
                android:text="23.56"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/txt18" />

            <ImageView
                android:id="@+id/item_goodsEnquiryGift_car_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size20"
                android:src="@drawable/car" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
