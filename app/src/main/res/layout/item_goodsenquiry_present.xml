<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_EFEFF4">

    <RelativeLayout
        android:id="@+id/item_goodsEnquiry_present_rl"
        android:layout_width="@dimen/dp_174"
        android:layout_height="@dimen/dp_174"
        android:background="@drawable/white_public_discount_xrv"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_goodsEnquiry_present_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/item_goodsEnquiry_present_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiry_present_iv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="阿莫西林胶囊阿莫西..."
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:id="@+id/item_goodsEnquiry_present_gift_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiry_present_name_tv"
            android:layout_marginStart="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_goodsEnquiry_present_giftSign_tv"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/white_bg_sign"
                android:gravity="center"
                android:text="@string/gift"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_goodsEnquiry_present_giftName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/item_goodsEnquiry_present_giftSign_tv"
                android:text="阿莫西林胶囊"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_goodsEnquiry_present_num_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_goodsEnquiry_present_gift_rl"
            android:layout_below="@+id/item_goodsEnquiry_present_gift_rl"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_goodsEnquiry_present_numSign_tv"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/white_bg_sign"
                android:gravity="center"
                android:text="@string/num"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_goodsEnquiry_present_numName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/item_goodsEnquiry_present_numSign_tv"
                android:text="最低购买3盒"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiry_present_num_rl"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/item_goodsEnquiry_present_moneySign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiry_present_money_tv"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/moneySign"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/item_goodsEnquiry_present_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_goodsEnquiry_present_moneySign_tv"
                android:text="23.56"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/item_goodsEnquiry_present_car_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/car" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
