<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_EFEFF4">

    <RelativeLayout
        android:layout_width="@dimen/dp_174"
        android:layout_height="@dimen/dp_174"
        android:background="@drawable/white_public_discount_xrv"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_goodsEnquiryDiscount_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/item_goodsEnquiryDiscount_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_iv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="阿莫西林胶囊阿莫西..."
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_goodsEnquiryDiscount_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_name_tv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:text="9件即享优惠价」"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_goodsEnquiryDiscount_count_tv"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/item_goodsEnquiryDiscount_moneySign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/moneySign"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_goodsEnquiryDiscount_moneySign_tv"
                android:text="23.56"
                android:textColor="@color/color_EB3E2D"
                android:textSize="@dimen/sp_18" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/item_goodsEnquiryDiscount_money_tv"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_toEndOf="@+id/item_goodsEnquiryDiscount_money_tv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥56.00"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_1"
                    android:layout_centerVertical="true"
                    android:background="@color/color_999" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_goodsEnquiryDiscount_car_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/car" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
